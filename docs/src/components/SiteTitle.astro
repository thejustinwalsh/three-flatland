---
import { Image } from 'astro:assets';
import icon from '../assets/icon.svg';

const baseUrl = import.meta.env.BASE_URL || '/';
---

<a href={baseUrl} class="site-title-link" data-sound="warp">
  <Image
    src={icon}
    alt="three-flatland"
    width={32}
    height={32}
    class="site-icon"
  />
  <span class="site-title-text">three-flatland</span>
</a>

<style is:global>
  .site-title-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--retro-white, #f0edd8);
  }

  .site-title-link:hover {
    text-shadow: 0 0 12px var(--retro-cyan, #47cca9);
  }

  .site-icon {
    width: 32px;
    height: 32px;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
  }
</style>
