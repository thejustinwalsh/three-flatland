{
  "$schema": "https://turborepo.dev/microfrontends/schema.json",
  "options": {
    "localProxyPort": 5173
  },
  "applications": {
    "example-home": {
      "development": {
        "local": {
          "port": 4000
        }
      }
    },
    "example-react-basic-sprite": {
      "development": {
        "local": {
          "port": 4001
        }
      },
      "routing": [
        {
          "group": "react-examples",
          "paths": ["/react/basic-sprite", "/react/basic-sprite/:path*"]
        }
      ]
    },
    "example-vanilla-basic-sprite": {
      "development": {
        "local": {
          "port": 4002
        }
      },
      "routing": [
        {
          "group": "vanilla-examples",
          "paths": ["/vanilla/basic-sprite", "/vanilla/basic-sprite/:path*"]
        }
      ]
    },
    "example-vanilla-animation": {
      "development": {
        "local": {
          "port": 4003
        }
      },
      "routing": [
        {
          "group": "vanilla-examples",
          "paths": ["/vanilla/animation", "/vanilla/animation/:path*"]
        }
      ]
    },
    "example-react-animation": {
      "development": {
        "local": {
          "port": 4004
        }
      },
      "routing": [
        {
          "group": "react-examples",
          "paths": ["/react/animation", "/react/animation/:path*"]
        }
      ]
    },
    "example-vanilla-batch-demo": {
      "development": {
        "local": {
          "port": 4005
        }
      },
      "routing": [
        {
          "group": "vanilla-examples",
          "paths": ["/vanilla/batch-demo", "/vanilla/batch-demo/:path*"]
        }
      ]
    },
    "example-react-batch-demo": {
      "development": {
        "local": {
          "port": 4006
        }
      },
      "routing": [
        {
          "group": "react-examples",
          "paths": ["/react/batch-demo", "/react/batch-demo/:path*"]
        }
      ]
    }
  }
}
